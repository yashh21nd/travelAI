# Environment variables for affiliate programs
# Copy this file to .env and fill in your real affiliate IDs

# Global Platforms
# Booking.com Partner Hub - Sign up at partner.booking.com
BOOKING_AFFILIATE_ID=your_booking_affiliate_id_here

# Expedia TAAP - Sign up at expedia.com/affiliates  
EXPEDIA_AFFILIATE_ID=your_expedia_affiliate_id_here

# Hotels.com via Commission Junction
HOTELS_AFFILIATE_ID=your_hotels_com_affiliate_id_here

# Agoda Partner Program - Sign up at agoda.com/partners
AGODA_PARTNER_ID=your_agoda_partner_id_here

# Trivago Affiliate Program
TRIVAGO_AFFILIATE_ID=your_trivago_affiliate_id_here

# Indian Platforms (Great for Indian destinations!)
# GoIbibo Affiliate Program - Sign up at partners.goibibo.com
GOIBIBO_AFFILIATE_ID=your_goibibo_affiliate_id_here

# MakeMyTrip Partner Program - Sign up at partners.makemytrip.com
MAKEMYTRIP_AFFILIATE_ID=your_makemytrip_affiliate_id_here

# Database connection (when you scale)
DATABASE_URL=your_database_connection_string

# Revenue tracking
ENABLE_CONVERSION_TRACKING=true
ENABLE_ANALYTICS=true

# Business information for affiliate applications
BUSINESS_NAME=TravelAI Pro
BUSINESS_EMAIL=your-business-email@domain.com
BUSINESS_WEBSITE=your-domain.com
MONTHLY_TRAFFIC_ESTIMATE=1000

# Payment information
PAYPAL_EMAIL=your-paypal@domain.com
BANK_ACCOUNT_COUNTRY=IN
TAX_ID=your-tax-id-if-applicable